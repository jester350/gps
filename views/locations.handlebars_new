    <script>
$(document).ready(function () {
    $('#locationsTable').DataTable({
        responsive: true,
        "order": [[0, "desc"]],
        "columnDefs": [
            { type: "date", targets: 0, responsivePriority: 1 }, // Ensure date column is prioritized
            { width: "50%", targets: 0 }
        ],
        "responsive": true
    });
